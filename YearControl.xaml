<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1App.YearControl"
             Title="YearControl"
             x:Name="F1"
            BindingContext="{x:Reference F1}"
              >
    <VerticalStackLayout>
        <Grid RowDefinitions="100,*">
            <Grid Grid.Row="0">
                <Button  Grid.Column="0"
                         Text="-" 
                         Clicked="MinusButton"/>
                <Entry Grid.Column="1" 
                       Text="{Binding Value}"/>
                <Button Grid.Column="2" 
                        Text="+" 
                        Clicked="PlusButton"/>
            </Grid>
        </Grid>
    </VerticalStackLayout>
</ContentPage>